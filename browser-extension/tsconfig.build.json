{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Use ES2020 for modern features but will bundle to IIFE
    "module": "ES2020",
    "target": "ES2020"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**/*",
    "src/__tests__/**/*"
  ]
}
