{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "jsxSingleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "proseWrap": "preserve",
  "htmlWhitespaceSensitivity": "css",
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "auto",
  "singleAttributePerLine": false,
  "overrides": [
    {
      "files": ["*.json"],
      "options": {
        "printWidth": 80,
        "tabWidth": 2
      }
    },
    {
      "files": ["*.md"],
      "options": {
        "printWidth": 80,
        "proseWrap": "always",
        "tabWidth": 2
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "printWidth": 120,
        "htmlWhitespaceSensitivity": "ignore",
        "singleAttributePerLine": true
      }
    },
    {
      "files": ["*.css"],
      "options": {
        "printWidth": 120,
        "singleQuote": false
      }
    },
    {
      "files": ["manifest.json"],
      "options": {
        "printWidth": 80,
        "tabWidth": 2,
        "trailingComma": "none"
      }
    },
    {
      "files": ["package.json", "package-lock.json"],
      "options": {
        "printWidth": 80,
        "tabWidth": 2,
        "trailingComma": "none"
      }
    }
  ]
}
