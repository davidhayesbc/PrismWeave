{
  "name": "prismweave-browser-extension",
  "version": "1.0.0",
  "description": "Browser extension for capturing web pages as markdown and syncing to Git repository",
  "main": "dist/background/service-worker.js",
  "scripts": {
    "build": "node scripts/build-simple.js",
    "build:prod": "cross-env NODE_ENV=production node scripts/build-simple.js",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "c8 --reporter=text --reporter=lcov --reporter=html jest",
    "lint": "eslint src/**/*.{js,ts}",
    "lint:fix": "eslint src/**/*.{js,ts} --fix",
    "format": "prettier --write \"src/**/*.{js,ts,json,html,css,md}\" \"*.{js,ts,json,html,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,json,html,css,md}\" \"*.{js,ts,json,html,css,md}\"",
    "package": "npm run build && node scripts/package.js",
    "deploy": "bash scripts/deploy.sh",
    "type-check": "tsc --noEmit",
    "dev": "node scripts/serve-dev.js",
    "dev:port": "node scripts/serve-dev.js --port",
    "dev:quiet": "node scripts/serve-dev.js --quiet"
  },
  "keywords": [
    "browser-extension",
    "markdown",
    "document-capture",
    "git",
    "chrome-extension",
    "edge-extension"
  ],
  "author": "PrismWeave Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.37.0",
    "@types/chrome": "^0.1.22",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.2",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "babel-jest": "^30.2.0",
    "babel-plugin-istanbul": "^7.0.1",
    "c8": "^10.1.3",
    "chalk": "^5.6.2",
    "cross-env": "^10.1.0",
    "esbuild": "^0.25.10",
    "eslint": "^9.37.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "pretty-quick": "^4.2.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.4",
    "turndown": "^7.2.1",
    "typescript": "^5.9.3"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "prismweave@example.com"
    }
  },
  "extensionManifest": {
    "chrome": "manifest.json",
    "firefox": "manifest.firefox.json"
  }
}
