{
  "name": "prismweave-browser-extension",
  "version": "1.0.0",
  "description": "Browser extension for capturing web pages as markdown and syncing to Git repository",
  "main": "src/background/service-worker.js",
  "scripts": {
    "build": "npm run copy-files",
    "copy-files": "node scripts/build.js",
    "minify": "terser dist/src/**/*.js --compress --mangle -o dist/bundle.min.js",
    "dev": "npm run copy-files",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,json,html,css,md}\" \"*.{js,json,html,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,json,html,css,md}\" \"*.{js,json,html,css,md}\"",
    "format:staged": "pretty-quick --staged",
    "clean": "rimraf dist",
    "zip": "npm run build && node scripts/package.js"
  },
  "keywords": [
    "browser-extension",
    "markdown",
    "document-capture",
    "git",
    "chrome-extension",
    "edge-extension"
  ],
  "author": "PrismWeave Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@eslint/js": "^9.0.0",
    "babel-jest": "^29.0.0",
    "eslint": "^9.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "prettier": "^3.0.0",
    "pretty-quick": "^4.0.0",
    "rimraf": "^6.0.0",
    "terser": "^5.0.0"
  },
  "dependencies": {
    "turndown": "^7.1.0"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "prismweave@example.com"
    }
  },
  "extensionManifest": {
    "chrome": "manifest.json",
    "firefox": "manifest.firefox.json"
  }
}
