{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "@types/chrome", "node"],
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "isolatedModules": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/__tests__/**/*.test.ts",
    "src/**/*.test.js",
    "jest.setup.js"
  ]
}
