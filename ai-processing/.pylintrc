[MASTER]
# Python code to execute, usually for sys.path manipulation such as
# pygtk.require().
init-hook='import sys; sys.path.append("src")'

# Add files or directories to the blacklist. They should be base names, not paths.
ignore=CVS,.git,__pycache__,*.pyc,build,dist,venv,env

# Use multiple processes to speed up Pylint.
jobs=1

# When enabled, pylint would attempt to guess common patterns and suggest
# fixes
suggestion-mode=yes

[MESSAGES CONTROL]
# Disable specific warnings that are too strict for this project
disable=
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring  
    C0116,  # missing-function-docstring
    R0903,  # too-few-public-methods (for dataclasses)
    R0913,  # too-many-arguments
    R0914,  # too-many-locals
    R0915,  # too-many-statements
    R0912,  # too-many-branches
    W0613,  # unused-argument (common in async handlers)
    W0611,  # unused-import (for optional dependencies)
    E1101,  # no-member (for dynamic imports)
    C0103,  # invalid-name (for single letter variables)
    W0622,  # redefined-builtin
    R0801,  # duplicate-code (common in similar modules)
    W0212,  # protected-access (for internal APIs)
    R0902,  # too-many-instance-attributes
    R0904,  # too-many-public-methods
    C0301,  # line-too-long (handled by formatter)

[FORMAT]
# Maximum number of characters on a single line.
max-line-length=120

# Maximum number of lines in a module
max-module-lines=1000

[VARIABLES]
# List of names which should always be defined in a module's namespace.
additional-builtins=

# List of strings which can identify a callback function by name.
callbacks=cb_,_cb

[DESIGN]
# Maximum number of arguments for function / method
max-args=8

# Maximum number of locals for function / method body
max-locals=20

# Maximum number of return / yield for function / method body
max-returns=6

# Maximum number of branch for function / method body
max-branches=15

# Maximum number of statements in function / method body
max-statements=50

[IMPORTS]
# Allow wildcard imports in __init__.py files
allow-wildcard-with-all=no

[TYPECHECK]
# List of members which are set dynamically and missed by pylint inference
# system, and so shouldn't trigger E1101 when accessed.
generated-members=

# List of module names for which member attributes should not be checked
ignored-modules=langchain,chromadb,ollama,fastapi,uvicorn,click,rich

[SIMILARITIES]
# Minimum lines number of a similarity.
min-similarity-lines=6

# Ignore comments when computing similarities.
ignore-comments=yes

# Ignore docstrings when computing similarities.
ignore-docstrings=yes

# Ignore imports when computing similarities.
ignore-imports=no
