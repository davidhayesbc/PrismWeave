models:
  large:
    fallback: mistral:latest
    max_context: 16000
    max_tokens: 4000
    primary: llama3.1:8b
    temperature: 0.5
    timeout: 120
  medium:
    fallback: llama3.1:8b
    max_context: 8000
    max_tokens: 2000
    primary: mistral:latest
    temperature: 0.3
    timeout: 60
  small:
    fallback: mistral:latest
    max_context: 3000
    max_tokens: 1000
    primary: phi3:mini
    temperature: 0.1
    timeout: 45
ollama:
  host: http://localhost:11434
  max_retries: 2
  retry_delay: 5
  timeout: 45
processing:
  chunk_size: 2000
  enable_preprocessing: true
  max_content_length: 3000
  min_word_count: 50
  overlap: 200
  remove_code_blocks: true
  simplify_markdown: true
  timeout: 45
taxonomy:
