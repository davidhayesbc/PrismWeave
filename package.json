{
  "name": "prismweave",
  "version": "1.2.1",
  "description": "PrismWeave - Unified document management and content creation system",
  "private": true,
  "type": "commonjs",
  "workspaces": [
    "browser-extension",
    "browser-extension/dev-tools"
  ],
  "scripts": {
    "build": "node build.js build",
    "build:browser-extension": "node build.js build browser-extension",
    "build:bookmarklet": "node build.js build bookmarklet",
    "build:cli": "node build.js build cli",
    "build:dev-tools": "node build.js build dev-tools",
    "build:web": "node build.js web",
    "build:web:fast": "node build.js web --fast",
    "clean": "node build.js clean",
    "test": "npm run test:cli && npm run test:browser-extension && npm run test:ai-processing",
    "test:browser-extension": "npm test --prefix browser-extension",
    "test:cli": "npm test --prefix cli",
    "test:ai-processing": "cd ai-processing && ( (command -v uv >/dev/null 2>&1 && uv run pytest tests/ -v) || ( [ -x .venv/bin/python ] && .venv/bin/python -m pytest tests/ -v ) )",
    "serve:web": "node serve-web.js",
    "watch:web": "node serve-web.js --watch",
    "dev:web": "npm run build:web && node serve-web.js --watch",
    "dev": "npm run build:web && node serve-web.js --watch",
    "serve:web:python": "cd dist/web && python -m http.server 8080",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "aspire:run": "aspire run",
    "aspire:run:dotnet": "dotnet run apphost.cs",
    "docker:dev": "docker-compose up",
    "docker:dev:build": "docker-compose up --build",
    "docker:dev:ollama": "docker-compose --profile with-ollama up",
    "docker:dev:ollama:build": "docker-compose --profile with-ollama up --build",
    "docker:dev:detached": "docker-compose up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml up --build -d",
    "docker:prod:ollama": "docker-compose -f docker-compose.prod.yml --profile with-ollama up -d",
    "docker:down": "docker-compose down && docker-compose -f docker-compose.prod.yml down",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:ai": "docker-compose logs -f ai-processing",
    "docker:logs:web": "docker-compose logs -f website",
    "docker:logs:viz": "docker-compose logs -f visualization",
    "docker:logs:ollama": "docker-compose logs -f ollama",
    "docker:build": "docker-compose build && docker-compose -f docker-compose.prod.yml build",
    "docker:build:nocache": "docker-compose build --no-cache && docker-compose -f docker-compose.prod.yml build --no-cache",
    "docker:clean": "docker-compose down -v --rmi local && docker-compose -f docker-compose.prod.yml down -v --rmi local",
    "docker:test": "docker-compose exec ai-processing uv run pytest -v",
    "docker:shell:ai": "docker-compose exec ai-processing bash",
    "docker:shell:web": "docker-compose exec website sh",
    "docker:shell:viz": "docker-compose exec visualization sh",
    "docker:pull-models": "docker-compose exec ollama ollama pull phi3:mini && docker-compose exec ollama ollama pull nomic-embed-text",
    "docker:health": "docker-compose ps && docker ps --filter 'name=prismweave' --format 'table {{.Names}}\\t{{.Status}}\\t{{.Ports}}'"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "esbuild": "^0.25.8",
    "png-to-ico": "^3.0.0",
    "sharp": "^0.33.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
