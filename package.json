{
  "name": "prismweave",
  "version": "1.2.1",
  "description": "PrismWeave - Unified document management and content creation system",
  "private": true,
  "type": "commonjs",
  "workspaces": [
    "browser-extension",
    "browser-extension/dev-tools",
    "cli",
    "visualization",
    "website",
    "packages/shared"
  ],
  "scripts": {
    "//": "=== Development (Aspire Primary) ===",
    "dev": "aspire run",
    "dev:dashboard": "echo 'Open Aspire Dashboard at http://localhost:4000'",
    "//": "=== Build ===",
    "build": "npm run build:all",
    "build:all": "npm run build --workspaces --if-present",
    "build:browser-extension": "npm run build --workspace=browser-extension",
    "build:cli": "npm run build --workspace=cli",
    "build:web": "node scripts/build-web.js",
    "clean": "rm -rf dist/ && npm run clean --workspaces --if-present",
    "//": "=== Testing ===",
    "test": "npm run test:all",
    "test:all": "npm test --workspaces --if-present && npm run test:ai",
    "test:browser-extension": "npm test --workspace=browser-extension",
    "test:cli": "npm test --workspace=cli",
    "test:ai": "cd ai-processing && ( (command -v uv >/dev/null 2>&1 && uv run pytest tests/ -v) || ( [ -x .venv/bin/python ] && .venv/bin/python -m pytest tests/ -v ) )",
    "//": "=== Code Quality ===",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --build",
    "//": "=== Production Deployment (Docker) ===",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml up --build -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker-compose -f docker-compose.prod.yml logs -f"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "esbuild": "^0.25.8",
    "png-to-ico": "^3.0.0",
    "sharp": "^0.33.5",
    "typescript": "^5.9.3",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
